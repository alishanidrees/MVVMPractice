    <style name="MaterialChips" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <!-- ... -->
        <item name="chipBackgroundColor">@color/white</item>
    </style>

    <style name="ChipTextStyleAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ChipTextStyleAppearanceDisable">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:textColor">@color/txtHintColor</item>
    </style>

</resources>