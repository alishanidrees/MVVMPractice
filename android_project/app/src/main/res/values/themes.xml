<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppBogoTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="M">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status Bar Text and Background Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/black</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- font set -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditViewStyle</item>


        <!-- ALl TextInput Line Bottom Color -->
    </style>

    <!-- ToolBar -->

    <style name="AppBogoTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font</item>
        <item name="android:textSize">@dimen/x14</item>
    </style>


    <style name="EditViewStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SCBSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="color">@color/colorPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorTextLight</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">6sp</item>
    </style>

