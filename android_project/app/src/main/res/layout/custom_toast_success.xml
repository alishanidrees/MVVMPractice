<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/llSuccess"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:weightSum="1"
  android:paddingHorizontal="@dimen/x16"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/round_toast_success"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_weight="1"
        android:id="@+id/txtMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:padding="@dimen/x16"
        android:textColor="@color/green"
        android:textSize="@dimen/s16"
   />

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:layout_marginEnd="@dimen/x16"
        android:src="@drawable/ic_circle_check"
        app:tint="@color/green" />
    </LinearLayout>
</LinearLayout>