<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    android:background="@color/white"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.avancera.mvvmarchitectureapp.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">



    </fragment>


    <fragment
        android:id="@+id/fragment1"
        android:name="com.avancera.mvvmarchitectureapp.fragments.Fragment1"
        tools:layout="@layout/fragment_1">

        <action
            android:id="@+id/action_homeFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            />

    </fragment>


    <fragment
        android:id="@+id/fragment2"
        android:name="com.avancera.mvvmarchitectureapp.fragments.Fragment2"
        tools:layout="@layout/fragment_2">
    </fragment>



    <fragment
        android:id="@+id/fragment3"
        android:name="com.avancera.mvvmarchitectureapp.fragments.Fragment3"
        tools:layout="@layout/fragment_3">
    </fragment>


    <fragment
        android:id="@+id/fragment4"
        android:name="com.avancera.mvvmarchitectureapp.fragments.Fragment4"
        tools:layout="@layout/fragment_4">
    </fragment>

    <fragment
        android:id="@+id/testFragment"
        android:name="com.avancera.mvvmarchitectureapp.fragments.TestFragment"
        tools:layout="@layout/fragment_test">
    </fragment>



</navigation>